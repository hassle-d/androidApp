<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clickzone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:padding="3dp"
    android:layout_marginRight="5dp"
    android:layout_toLeftOf="@+id/favorite"
    android:layout_toStartOf="@+id/favorite">
    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:contentDescription="qscqscqc"/>

    <TextView
        android:id="@+id/alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image"
        android:maxLines="2"
        android:text="TITRE"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"

        android:textSize="19sp"/>
    <TextView
        android:id="@+id/buy_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/alias"
        android:layout_toEndOf="@+id/image"
        android:text="@string/label_buy"/>
    <TextView
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alias"
        android:layout_toEndOf="@+id/buy_label"
        android:text="2017-01-01"/>
    <TextView
        android:id="@+id/end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/buy"
        android:layout_toEndOf="@+id/image"
        android:text="@string/label_end"/>
    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buy"
        android:layout_toEndOf="@+id/end_label"
        android:text="2017-01-01"/>
</RelativeLayout>
